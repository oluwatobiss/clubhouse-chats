<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/index.css" />
  <title><%= appName %></title>
</head>

<body>
  <main>
    <nav>
      <div class="logo"><%= appName %></div>
      <div class="nav-btns-container">
        <%- !userStatus ? '<a href="/log-in" class="log-in-btn">Log in</a>' : "" %>
        <%- !userStatus ? '<a href="/sign-up" class="sign-up-btn">Sign up</a>' : "" %>
        <%- userStatus ? '<a href="/log-out" class="log-out-btn">Log out</a>' : "" %>
        <%- userStatus === 'author' ? '<a href="/join-club" class="join-club-btn">Join club</a>' : "" %>
        <%- userStatus ? '<a href="/new-post" class="new-post-btn">Create post</a>' : "" %>
      </div>
    </nav>
    <article>
      <% posts.forEach(post => { %>
      <div class="post-card">
        <%- userStatus === 'member' || userStatus === 'admin' ? include("partials/post-card-bio", {post}) : "" %>
        <h2><%= post.title %></h2>
        <div><%= post.text %></div>
      </div>
      <% }); %>
    </article>
  </main>
</body>

</html>